<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rentmotors" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/toolbar_color_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="color_borders">@color/gray_extra_light_dark</item>
        <item name="color_toolbar">@color/toolbar_color_dark</item>
        <item name="color_text_extra">@color/gray_extra_light</item>
        <item name="color_text_primary">@color/white</item>
        <item name="color_text_link">@color/link_color</item>


        <item name="android:textSize">16sp</item>
        <!-- Customize your theme here. -->
    </style>
</resources>