<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rentmotors" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/toolbar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorForeground">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="color_borders">@color/gray_extra_light</item>
        <item name="color_toolbar">@color/toolbar_color</item>
        <item name="color_text_extra">@color/gray_light</item>
        <item name="color_text_electric">@color/electricGreen</item>
        <item name="color_text_primary">@color/gray</item>
        <item name="color_text_link">@color/link_color</item>

        <item name="android:textSize">16sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Border">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="RoundButton">
        <item name="android:tint">@color/round_button_color</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/gray</item>
    </style>

    <style name="SaveToWalletButton">
        <item name="android:background">@drawable/save_to_wallet_button</item>
    </style>

    <style name="SplashScreen" parent="Theme.Rentmotors">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>